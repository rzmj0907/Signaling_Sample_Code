<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
        android:id="@+id/room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:background="@drawable/logout_btn_bg"
        android:text="房间号"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_leave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_size_30"
        android:layout_marginLeft="@dimen/dp_size_16"
        android:layout_marginRight="@dimen/dp_size_16"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_round_25_selector"
        android:gravity="center"
        android:text="@string/leave_room"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_18"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/member_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_leave"
        android:layout_below="@id/room_info"></android.support.v7.widget.RecyclerView>
</RelativeLayout>